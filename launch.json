{
  "version": "0.2.0",
  "configurations": [
    {
      // Use this to STEP and hit breakpoints (no reloader)
      "name": "AidMate: Uvicorn (debug, no reload)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app:app", "--host", "127.0.0.1", "--port", "9000"],
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "${workspaceFolder}" },
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      // Use this while editing (auto-reload). Breakpoints may be flaky,
      // but we ask debugpy to trace subprocesses too.
      "name": "AidMate: Uvicorn (reload)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app:app", "--host", "127.0.0.1", "--port", "9000", "--reload"],
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "${workspaceFolder}" },
      "console": "integratedTerminal",
      "justMyCode": true,
      "subProcess": true
    }
  ]
}
